<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="172dp"
                android:paddingTop="@dimen/activity_vertical_key24"
                android:paddingRight="@dimen/activity_vertical_key16"
                android:paddingLeft="@dimen/activity_vertical_key16"
                android:paddingBottom="@dimen/activity_vertical_key8"
                android:fitsSystemWindows="true"
                android:background="@drawable/user_bg"
                    >

    <ImageView
        android:id="@+id/user_logo_img"
        style="@style/icon_user"
        android:layout_marginTop="@dimen/activity_vertical_key16"
        android:layout_marginLeft="@dimen/activity_vertical_key16"
        android:src="@drawable/logo60"
        />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_vertical_key56"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical"
        >

        <TextView
            android:id="@+id/user_name_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Неудахин Алексей"
            android:textColor="@android:color/white"
            android:layout_marginLeft="@dimen/activity_vertical_key16"
            android:textSize = "@dimen/font_size_body1"
            android:fontFamily="sans-serif-medium"
            />

        <TextView
            android:id="@+id/user_email_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Какой то е-мыл"
            android:textColor="@android:color/white"
            android:layout_marginLeft="@dimen/activity_vertical_key16"
            android:textSize = "@dimen/font_size_body1"
            android:fontFamily="sans-serif"
            />
    </LinearLayout>
</RelativeLayout>